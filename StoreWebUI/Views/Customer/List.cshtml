@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<CustomerVM>

@{
    ViewData["Title"] = "Customer Search Result";
}

<h1>Customer Search Result</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.FirstName)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.LastName)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Email)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)

            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.CustomerID}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.CustomerID}) |
                @Html.ActionLink("View Orders", "ViewOrders", new {id = item.CustomerID})
            </td>
        </tr>
    }
    </tbody>
</table>