@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<LocationVM>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Locations</h1>

<p>
    <a asp-action="Create">Add New Location</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.StoreName)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.City)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.State)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Address)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.LocationID}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.LocationID}) |
                @Html.ActionLink("Inventory", "Inventory", new {id = item.LocationID}) |
                @Html.ActionLink("View Orders", "ViewOrders", new {id = item.LocationID})
            </td>
        </tr>
    }
    </tbody>
</table>